CC	= gcc
CFLAGS = -g -O2 -fPIC -I../src
LDFLAGS =
LIBNAME = libskel

all: $(LIBNAME).so

$(LIBNAME).o: $(LIBNAME).c

$(LIBNAME).so.1: $(LIBNAME).o
	gcc -g -shared -Wl,-soname,$(LIBNAME).so.1 -o $(LIBNAME).so.1.0.1 $(LIBNAME).o -lc $(LDFLAGS)

$(LIBNAME).so: $(LIBNAME).so.1
	if test ! -e $(LIBNAME).so ; then \
		ln -s $(LIBNAME).so.1.0.1 $(LIBNAME).so ; \
	fi

clean:
	rm -f *.o *.so *.so.1.0.1

.PHONY: clean

